{
  "name": "figura",
  "displayName": "Figura",
  "description": "Figura Script Helper",
  "version": "0.4.7",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:lua"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [],
    "configuration": {
      "title": "Figura",
      "properties": {
        "figura.checkForNewDocumentationVersion": {
          "type": "boolean",
          "default": true,
          "description": "Automatically download latest Figura Documentation and keep it up to date."
        },
        "figura.useLanguageServer": {
          "type": "boolean",
          "default": false,
          "description": "Enables compatibility with Lua Language Server + Figura Documentation."
        },
        "figura.librariesFolderName": {
          "type": "string",
          "default": "libraries",
          "description": "Name of the libraries folder. Libraries will be searched in .minecraft/figura/model_files/<libraries-folder-name> as well as in <current-workspace>/<libraries-folder-name>"
        }
      }
    },
    "snippets": [
      {
        "language": "lua",
        "path": "./snippets.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.58.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "publisher": "Manuel-Underscore",
  "icon": "images/icon.png",
  "dependencies": {
    "extract-zip": "^2.0.1",
    "fs-extra": "^10.0.0",
    "got": "^11.8.2"
  }
}
