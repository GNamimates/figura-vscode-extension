{
  "name": "figura",
  "displayName": "Figura",
  "description": "Figura Script Helper",
  "version": "0.5.7",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:lua"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [],
    "configuration": {
      "title": "Figura",
      "properties": {
        "figura.librariesFolderPath": {
          "type": "string",
          "default": "",
          "description": "Path to the libraries folder.",
          "order": 1
        },
        "figura.targetFiguraVersion": {
          "type": "string",
          "default": "0.0.7",
          "enum": [
            "0.0.6",
            "0.0.7",
            "0.0.8 (animations only)",
            "0.0.8-rc.6",
            "0.0.8-rc.7",
            "0.0.8-rc.9"
          ],
          "description": "Target Figura version. Requires reloading the the window on change.",
          "order": 2
        },
        "figura.documentation.enableDocumentation": {
          "type": "boolean",
          "default": true,
          "description": "Automatically download Figura documentation to the workspace and enable compatibility mode.",
          "order": 3
        },
        "figura.documentation.sources": {
          "type": "object",
          "properties": {
            "Default": {
              "type": "string"
            },
            "0.0.6": {
              "type": "string"
            },
            "0.0.7": {
              "type": "string"
            },
            "0.0.8 (animations only)": {
              "type": "string"
            },
            "0.0.8-rc.6": {
              "type": "string"
            },
            "0.0.8-rc.7": {
              "type": "string"
            },
            "0.0.8-rc.9": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "description": "Documentation source for each Figura version. Can be either a URL or a folder path.",
          "order": 5
        }
      }
    },
    "snippets": [
      {
        "language": "lua",
        "path": "./snippets.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.58.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "publisher": "Manuel-Underscore",
  "icon": "images/icon.png",
  "dependencies": {
    "extract-zip": "^2.0.1",
    "fs-extra": "^10.0.0",
    "got": "^11.8.2"
  }
}
