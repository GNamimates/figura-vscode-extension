{
  "name": "figura",
  "displayName": "Figura",
  "description": "Figura Script Helper",
  "version": "0.5.4",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:lua"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [],
    "configuration": {
      "title": "Figura",
      "properties": {
        "figura.librariesFolderPath": {
          "type": "string",
          "default": "",
          "description": "Path to the libraries folder.",
          "order": 1
        },
        "figura.targetFiguraVersion": {
          "type": "string",
          "default": "0.0.7",
          "enum": [
            "0.0.6",
            "0.0.7",
            "0.0.8 (animations only)",
            "0.0.8-rc.6",
            "0.0.8-rc.7"
          ],
          "description": "Target Figura version for internal autocomplete. Only works if documentation is disabled. Requires reloading the window.",
          "order": 2
        },
        "figura.documentation.enableDocumentation": {
          "type": "boolean",
          "default": true,
          "description": "Automatically download Figura documentation to the workspace and enable compatibility mode.",
          "order": 3
        },
        "figura.documentation.source": {
          "type": "string",
          "enum": [
            "Default",
            "Custom",
            "Local"
          ],
          "default": "Default",
          "description": "Select where to get the documentation from.",
          "order": 4
        },
        "figura.documentation.customDownloadUrl": {
          "type": "string",
          "default": "",
          "description": "If documentation source is custom, it will download from here instead.",
          "order": 5
        },
        "figura.documentation.localPath": {
          "type": "string",
          "default": "",
          "description": "If documentation source is local, it will copy this folder into your workspace.",
          "order": 6
        }
      }
    },
    "snippets": [
      {
        "language": "lua",
        "path": "./snippets.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.58.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "publisher": "Manuel-Underscore",
  "icon": "images/icon.png",
  "dependencies": {
    "extract-zip": "^2.0.1",
    "fs-extra": "^10.0.0",
    "got": "^11.8.2"
  }
}
